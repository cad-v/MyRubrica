<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="@string/nomecontatto"
            android:layout_width="174dp"
            android:layout_height="37dp"
            android:id="@+id/textNome" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textCognome" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="30sp"/>
    <TextView
            android:text="@string/cognome"
            android:layout_width="162dp"
            android:layout_height="36dp"
            android:id="@+id/textCognome" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>